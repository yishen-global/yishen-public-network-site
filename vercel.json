{
  "version": 2,
  "routes": [
    { "src": "^/robots.txt$", "dest": "/robots.txt" },
    { "src": "^/sitemap.xml$", "dest": "/sitemap.xml" },
    { "src": "^/sitemap-world.xml$", "dest": "/sitemap-world.xml" },

    { "src": "^/([a-z]{2})/([a-z0-9-]+)/?$", "dest": "///index.html" },
    { "src": "^/([a-z]{2})/?$", "dest": "//index.html" },

    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
